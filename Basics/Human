package basics;


public class Human {
	private int health = 100;
	private int attack = 1;
	private int strength = 1;
	private int magic = 1;
	private int defense = 1;
	
	public void humanStats(){
		
		System.out.println("The human stats are "+health+" health.");
		System.out.println("The human stats are "+attack+" attack.");
		System.out.println("The human stats are "+strength+" strength.");
		System.out.println("The human stats are "+magic+" magic.");
		System.out.println("The human stats are "+defense+" defense.");
		
	}

	public int healthIncrease(int health) {
		this.health = 100;
		int newHealth;
		newHealth = health +1;
		return newHealth;
	}
}
